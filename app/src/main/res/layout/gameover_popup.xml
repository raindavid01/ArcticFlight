<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:background="#00FFFFFF">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="367dp"
            android:layout_height="70dp"
            android:layout_gravity="center|top"
            android:layout_margin="30dp"
            app:srcCompat="@drawable/game_over" />

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#18284A"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/pixelated"
                    android:gravity="center"
                    android:text="Score"
                    android:textColor="#53A5DF"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pixelated"
                    android:textColor="#ECF9FF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/best_score_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/pixelated"
                    android:text="Best Score"
                    android:textColor="#53A5DF"
                    android:textSize="34sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/best_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pixelated"
                    android:textColor="#ECF9FF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="392dp"
            android:background="#00FFFFFF"
            android:orientation="horizontal">

            <Button
                android:id="@+id/retryBtn"
                android:layout_width="93dp"
                android:layout_height="42dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="@drawable/retry" />

            <Button
                android:id="@+id/homedeathBtn"
                android:layout_width="93dp"
                android:layout_height="42dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="@drawable/home" />
        </LinearLayout>

    </FrameLayout>
</FrameLayout>